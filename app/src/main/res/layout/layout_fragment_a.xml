<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/btn_communication"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="传递消息"
        android:textSize="20sp"
        android:textColor="@color/colorDarkOrange"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_change_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="更换Fragment"
        android:textSize="20sp"
        android:textColor="@color/colorDarkOrange"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_change_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="更换文本"
        android:textSize="20sp"
        android:textColor="@color/colorDarkOrange"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tv_fragment_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是Fragment A"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:gravity="center"/>
</LinearLayout>